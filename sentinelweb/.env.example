# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/sentinelweb

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# BuloCloudSentinel API
SENTINEL_API_URL=http://bulocloud-sentinel-api:8000
SENTINEL_API_TOKEN=your-api-token-here

# CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# RTMP Server
RTMP_SERVER_URL=rtmp://rtmp-server:1935

# Logging
LOG_LEVEL=INFO
