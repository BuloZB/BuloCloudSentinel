# Database
# Format: postgresql+asyncpg://username:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://placeholderusername:placeholderpassword@db:5432/sentinelweb

# Redis
# Format: redis://[[username]:[password]]@host:port/db
REDIS_URL=redis://:placeholderpassword@redis:6379/0

# JWT
# Generate a secure key with: openssl rand -hex 32
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# BuloCloudSentinel API
SENTINEL_API_URL=http://bulocloud-sentinel-api:8000
SENTINEL_API_TOKEN=

# CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# RTMP Server
RTMP_SERVER_URL=rtmp://rtmp-server:1935

# Logging
LOG_LEVEL=INFO
